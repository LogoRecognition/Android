<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wrapper_list_item"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/gray">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image_view_avatar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_profile_image"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:paddingBottom="1dp"
        android:src="@drawable/acura_0024"
        app:civ_border_width="2dp"
        android:layout_alignParentTop ="true"
        app:civ_border_color="#FF000000"/>

    <!--Add 1dp bottom padding to remove weird flickering while animating-->

    <Button
        android:id="@+id/text_view_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#ff8c6a"
        android:fontFamily="sans-serif-thin"
        android:gravity="center_horizontal"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:paddingTop="10dp"
        android:background="@drawable/bt_shape"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="SELECT_PHOTO" />

    <Button
        android:id="@+id/select_view_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_name"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#ff8c6a"
        android:fontFamily="sans-serif-thin"
        android:gravity="center_horizontal"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:background="@drawable/bt_shape"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="TAKE_PHOTO" />

        <TextView
            android:id="@+id/answer_view_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@+id/select_view_name"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:visibility="visible"
            android:paddingTop="20dp"
            android:text="ANSWER:" />

        <TextView
            android:id="@+id/brand_view_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignParentBottom ="true"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:visibility="visible"
            android:paddingBottom="50dp"
            android:text="Acura" />


</RelativeLayout>