<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/result_title"
        android:text="Logo检测报告"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/feedback"
        app:layout_constraintTop_toBottomOf="@+id/result_title"
        android:src="@drawable/cancel_like"
        android:padding="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <ImageView
        android:id="@+id/share"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_title"
        android:src="@drawable/share"
        android:padding="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <ImageView
        android:id="@+id/like"
        app:layout_constraintRight_toLeftOf="@+id/share"
        app:layout_constraintTop_toBottomOf="@+id/result_title"
        android:src="@drawable/cancel_sc"
        android:padding="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <ImageView
        android:id="@+id/result_img"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/share"
        android:scaleType="centerCrop"
        android:src="@drawable/acura_0024"
        android:layout_width="match_parent"
        android:layout_height="180dp" />
    <ImageView
        android:id="@+id/name_star"
        app:layout_constraintTop_toBottomOf="@+id/result_img"
        android:src="@drawable/brand_star"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/result_img"
        app:layout_constraintLeft_toRightOf="@+id/name_star"
        android:text="品牌名"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="42dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/name_star"
        android:layout_marginTop="30dp"
        android:background="@color/rgray"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <TextView
        android:id="@+id/result_name"
        android:text="Acura"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintLeft_toRightOf="@+id/name_star"
        android:layout_marginBottom="3dp"
        android:textSize="20dp"
        android:layout_marginLeft="0dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/introduce_star"
        app:layout_constraintTop_toBottomOf="@+id/guideline"
        android:layout_marginTop="10dp"
        android:src="@drawable/brand_star"
        android:padding="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <TextView
        app:layout_constraintLeft_toRightOf="@+id/introduce_star"
        app:layout_constraintTop_toBottomOf="@+id/guideline"
        android:text="品牌简介"
        android:textSize="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="23dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/brand_introduce"
        android:singleLine="false"
        app:layout_constraintTop_toBottomOf="@+id/introduce_star"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="sdsdassssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssss"
        android:maxLines="3"
        android:maxLength="80"
        android:ellipsize="middle"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_width="320dp"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>
