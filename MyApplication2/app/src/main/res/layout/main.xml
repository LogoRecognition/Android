<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gray_line"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </android.support.v4.view.ViewPager>
    <View
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <View
        android:id="@+id/gray_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="@+id/bottom"
        android:background="@color/gray"
        />
    <ImageView
        android:id="@+id/branch"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:src="@drawable/brand"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageView
        android:id="@+id/search"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:src="@drawable/search_bottom"
        app:layout_constraintLeft_toRightOf="@id/branch"

        app:layout_constraintTop_toTopOf="@+id/bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageView
        android:id="@+id/statistic"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:src="@drawable/analysis"
        app:layout_constraintLeft_toRightOf="@id/search"
        app:layout_constraintTop_toTopOf="@+id/bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageView
        android:id="@+id/personal"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:src="@drawable/personal"
        app:layout_constraintLeft_toRightOf="@id/statistic"
        app:layout_constraintTop_toTopOf="@+id/bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</android.support.constraint.ConstraintLayout>
